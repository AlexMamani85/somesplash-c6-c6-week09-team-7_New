<section class="section-md">
    <div class="container-lg">
        <h1><%= @category.name %></h1>
        <p><%= @category.description %></p>

        <!-- Change new_employee_path after creating employee routes -->
        <button><%= link_to "New Photo", new_photo_path(category_id: @category.id) %></button>
        <% @photos.each do |photo| %>
            <div>
                <% if photo.image.attached? %>
                    <div>
                        <%= link_to photo_path(photo) do%>
                            <%= image_tag photo.image%>
                        <% end %>
                    </div>
                <% end %>
                <h3><%= photo.title %></h3>
                <span><%= photo.description %></span>
                <br>
                <span><%= "#{photo.comments_count} Comments" %></span>
                <br>
                <button><%= link_to "Edit", edit_photo_path(photo, category_id: @category.id) %></button>
                <button><%= link_to "Destroy", photo_path(photo), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                } %></button>
            </div>
        <% end %>

        <%= render "comments", comment: @comment_new %>
    </div>
</section>