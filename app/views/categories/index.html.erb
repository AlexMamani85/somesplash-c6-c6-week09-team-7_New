<section class="section-sm">
  <div class="container-sm categories">
    <h1 class="ctg-title">Categories</h1>

    <button class="button button--secondary button--sm ctg-bot-margin "><%= link_to "NEW CATEGORY", new_category_path, class: "ctg-button" %></button>
    <!--<%= button_tag "New category", type: "button"%>-->

    <% @categories.each do |category| %>
      <div class="ctg-card">
          <div>
            <% if category.cover.attached? %>
              <%= link_to category_path(category) do%>
              <%= image_tag category.cover, class: "ctg-cover"%>
              <% end %>
            <%end%>
          </div>
          <div class="ctg-card-body">
            <h2 class="card-title"><%= category.name %></h2>
            <p class="card-counter"><%= "#{category.photos_count} photos" %></p>
            <p class="card-description"><%= category.description %></p>
          </div>
          <div class="ctg-card-footer">
            <button class="button round-btn">
            <%= link_to edit_category_path(category) do%>
            <%= image_tag("pen.png")%>
            <% end %>
            </button>
            <button class="button round-btn">
            <%= link_to category_path(category), data: {
              turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                      } do %>
            <%= image_tag("trash.png")%>
            <% end %>
            </button>
          </div>
       </div>
    <%end%>
  </div>
</section>
