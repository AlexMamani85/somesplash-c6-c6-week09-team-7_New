<%= form_with model: category do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name, placeholder: "Technology" %>
    <% category.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description, placeholder: "Exploring our complicated relationship with technology..." %>
    <% category.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :cover %><br>
    <%= form.file_field :cover, accept: "image/png, image/jpeg" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
  
  <button> <%= link_to 'Back', url_for(:back) %> </button>
<% end %>