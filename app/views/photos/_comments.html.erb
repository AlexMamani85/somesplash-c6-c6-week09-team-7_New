<%= form_with url: photo_comments_path(@photo), model: comment do |form| %>
    <div>
        <%= form.text_area :body, placeholder: "Some respectful comment here."%>
        <%= comment.errors.full_messages_for(:body).each do |message| %>
            <div><%= message %></div>
        <%end%>
    </div>

    <div>
      <%= form.submit %>
    </div>
<% end %>

<h3>Comments</h3>
<% @comments.each do |comment| %>
    <div>
        <hr>
        <span><%= comment.body%></span>
        <span><%= comment.created_at%></span>
        <%= link_to "Destroy", photo_comment_path(@photo, comment), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
        }%>
    </div>
<% end %>